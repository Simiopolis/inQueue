	public void startAnotherActivity(){
		Intent goToNextActivity = new Intent(getApplicationContext(), MainActivity.class);
		startActivity(goToNextActivity);
		 Timer timer = new Timer();
	        timer.schedule(new TimerTask() {
				
				@Override
